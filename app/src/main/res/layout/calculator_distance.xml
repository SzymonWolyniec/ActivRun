<android.support.v7.widget.CardView
    style="@style/calculator_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/buttonColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#00ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/distanceCalcTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:text="@string/distanceCalcTV"
            android:textSize="20sp"
            android:textColor="@color/myTextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/pace"
                />

            <EditText
                android:id="@+id/distancePaceMinTV"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="m "/>

            <EditText
                android:id="@+id/distancePaceSecTV"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="s"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/time"
                />

            <EditText
                android:id="@+id/distanceHourTV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="h "/>

            <EditText
                android:id="@+id/distanceMinutsTV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="m "/>

            <EditText
                android:id="@+id/distanceSecTV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="s"/>


        </LinearLayout>



            <TextView
                android:id="@+id/distanceDistaceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text= "@string/distanceNull"
                android:layout_gravity="center_horizontal"
                />



        <Button
            android:id="@+id/distanceCalcBtn"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/calculateIt"
            android:background="@drawable/rounded_button_stroke"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>