<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentCalculators"
    android:background="@drawable/activrun_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <!-- Tempo / prędkość na godzinę -->
        <include layout="@layout/calculator_pace" />


        <!-- Tempo biegu/dystans = czas -->
        <include layout="@layout/calculator_time" />


        <!-- Temi,czas,odległość -->
        <include layout="@layout/calculator_distance" />


        <!-- Conversion -->
        <include layout="@layout/calculator_conversion" />


        <!-- Międzyczasy -->
        <include layout="@layout/calculator_laptime" />


        <!-- BMI -->
        <include layout="@layout/calculator_bmi" />


        <!-- Kcal -->
        <include layout="@layout/calculator_calories" />


        <!-- Tętno max -->
        <include layout="@layout/calculator_pulse" />



    </LinearLayout>

</ScrollView>