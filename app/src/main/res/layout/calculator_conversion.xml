<android.support.v7.widget.CardView
    style="@style/calculator_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/buttonColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#00ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/conversionCalcTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:text="@string/conversionCalcTV"
            android:textSize="20sp"
            android:textColor="@color/myTextColor"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"

        android:orientation="horizontal"
        android:gravity="center"
        >

        <RadioGroup
            android:id="@+id/conversionRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center_horizontal"

            >

            <RadioButton
                android:id="@+id/conversionPaceRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"

                android:textColor="@color/myTextColor"
                android:textSize="16sp"
                android:text="@string/paceToSpeed"
                />


            <RadioButton
                android:id="@+id/conversionSpeedRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:textColor="@color/myTextColor"
                android:textSize="15sp"
                android:text="@string/speedToPace"
                />


        </RadioGroup>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/pace"
                />

            <EditText
                android:id="@+id/conversionMinET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="min "/>

            <EditText
                android:id="@+id/conversionSecET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="s"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/speed"
                />

            <EditText
                android:id="@+id/conversionKmET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:enabled="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="km/h"/>
            />


        </LinearLayout>

        <Button
            android:id="@+id/conversionCalcBtn"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/calculateIt"
            android:background="@drawable/rounded_button_stroke"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
