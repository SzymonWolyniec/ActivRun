<android.support.v7.widget.CardView style="@style/calculator_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/buttonColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#00ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lapTimeCalcTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:text="@string/lapTimeCalcTV"
            android:textSize="20sp"
            android:textColor="@color/myTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/distance"
                />

            <EditText
                android:id="@+id/lapKmET"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="km "/>

            <EditText
                android:id="@+id/lapMetersET"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="m"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/goal"
                />

            <EditText
                android:id="@+id/lapHoursET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="h "/>

            <EditText
                android:id="@+id/lapMinutsET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="m "/>

            <EditText
                android:id="@+id/lapSecET"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="s"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text= "@string/pace"
            android:layout_gravity="center_horizontal"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/lapCalcKmTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text= "@string/kilometer"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/lapCalcLapTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text= "@string/lapTime"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


        <Button
            android:id="@+id/lapCalcBtn"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/calculateIt"
            android:background="@drawable/rounded_button_stroke"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>